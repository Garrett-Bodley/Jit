#! /usr/bin/env ruby
# frozen_string_literal: true

require 'pry-nav'
require_relative '../lib/command'

ENV['DEBUG'] = 'true'

begin
  name = ARGV.shift
  Command.execute(name)
rescue Command::Unknown => e
  $stderr.puts "jit: #{e.message}"
  exit 1
rescue => e
  $stderr.puts "fatal: #{e.message}"
  if ENV["DEBUG"]
    e.backtrace.each do |line|
      $stderr.puts "    from #{ line }"
    end
  end
  exit 1
end
